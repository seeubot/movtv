{
  "name": "movtv",
  "version": "1.0.0",
  "description": "Movie and TV series management bot with Express server and APK generator",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "docker:build": "docker build -t movtv .",
    "docker:run": "docker run -p 8000:8000 --env-file .env movtv",
    "postinstall": "mkdir -p public/apks && mkdir -p temp-apk"
  },
  "dependencies": {
    "node-telegram-bot-api": "^0.61.0",
    "mongoose": "^6.13.8",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "archiver": "^5.3.1",
    "fs-extra": "^11.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": "18.x"
  },
  "keywords": ["telegram", "bot", "movies", "series", "express", "docker", "apk", "android"],
  "author": "Your Name",
  "license": "MIT"
}
